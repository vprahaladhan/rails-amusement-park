<h1><%= !params[:attraction].nil? ? "Thanks for riding the " + params[:attraction] + "!" : '' %></h1>

<h1><%= @user.admin ? 'ADMIN' : '' %></h1>
<h1><%= @user.name %></h1>
<% if !@user.admin then %>
  <p>Height: <%= @user.height %></p>
  <p>Mood: <%= @user.mood %></p>
  <p>Tickets: <%= @user.tickets %></p>
<% end %>

<%= link_to 'See attractions', attractions_path %>